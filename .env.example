# Environment
NODE_ENV=development
PORT=3000

# Database (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/anisphere

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Redis (Required)
REDIS_URL=redis://localhost:6379

# Session
SESSION_SECRET=anisphere
SESSION_MAX_AGE=604800000
SESSION_RENEW_THRESHOLD=86400000

# Security
RATE_LIMIT_MAX=100
CORS_ORIGINS=http://localhost:3000

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM=AniSphere <noreply@example.com>